<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <EditText
            android:id="@+id/edtQuantity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="0"
            android:inputType="number" android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
            android:layout_marginEnd="49dp" android:layout_marginTop="50dp"/>
    <TextView
            android:text="الحجم"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#32a65b"
            android:id="@+id/textView36"
            android:layout_alignStart="@+id/edtQuantity" android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"/>
    <TextView
            android:text="الكمية"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#32a65b"
            android:id="@+id/textView37" android:layout_above="@+id/edtQuantity" android:layout_marginBottom="-50dp"
            android:layout_alignStart="@+id/edtQuantity"/>
    <Spinner
            android:layout_width="176dp"
            android:layout_height="26dp"
            android:textSize="18sp"
            android:id="@+id/spWeightCamel"
            android:spinnerMode="dialog"
            android:background="#ffffff"
            android:layoutDirection="rtl"
            android:accessibilityHeading="false"
            app:layout_constraintEnd_toEndOf="@+id/edtQuantity" app:layout_constraintTop_toTopOf="@+id/textView36"
    tools:targetApi="jelly_bean_mr1"/>

        </RelativeLayout>
        <Button
                android:id="@+id/btnItemOrder"
                android:text="@string/btnOrder_Text"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#32a65b" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
    </LinearLayout>
</RelativeLayout>