<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
>

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:background="@android:color/white">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cartItemImage"
                    android:id="@+id/txtCartItemQte"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemQteLabel"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="47dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="46dp"
                    app:layout_constraintVertical_bias="0.894"/>
            <TextView
                    android:text="بلستيك"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtCartItemPackaging"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemQte" android:layout_marginEnd="36dp"
                    android:layout_marginRight="36dp" android:layout_marginLeft="67dp" android:layout_marginStart="67dp"
                    app:layout_constraintStart_toEndOf="@+id/textView13" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView5"/>
            <TextView
                    android:text="أرباع"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemSlicing"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginEnd="178dp" android:layout_marginRight="178dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="79dp"
                    android:layout_marginStart="79dp" app:layout_constraintStart_toEndOf="@+id/textView4"/>
            <TextView
                    android:text="التقطيع"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtCartItemPackaging" android:id="@+id/textView5"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemQte" android:layout_marginEnd="36dp"
                    android:layout_marginRight="36dp" android:layout_marginLeft="64dp" android:layout_marginStart="64dp"
                    app:layout_constraintStart_toEndOf="@+id/txtCartItemWeight" android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtCartItemSlicing"/>
            <TextView
                    android:text="الوزن"
                    android:layout_width="wrap_content"
                    android:textColor="#32a65b"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
                    app:layout_constraintEnd_toStartOf="@+id/textView" android:layout_marginEnd="77dp"
                    android:layout_marginRight="77dp" app:layout_constraintBottom_toTopOf="@+id/txtCartItemWeight"
                    android:id="@+id/textView13"/>
            <TextView
                    android:text="10KG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemWeight"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemPackaging" android:layout_marginEnd="68dp"
                    android:layout_marginRight="68dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.916"/>
            <TextView
                    android:text="نعم"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemIntestine"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemSlicing" android:layout_marginEnd="83dp"
                    android:layout_marginRight="83dp"
            />
            <TextView
                    android:text="المصارن"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    app:layout_constraintBottom_toTopOf="@+id/txtCartItemIntestine"
                    app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginEnd="76dp"
                    android:layout_marginRight="76dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="36dp" android:layout_marginStart="36dp"/>
            <TextView
                    android:text="التعليب"
                    android:gravity="right"
                    android:textColor="#32a65b"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:id="@+id/textView"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemCategory" android:layout_marginEnd="52dp"
                    android:layout_marginRight="52dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>
            <TextView
                    android:text="الكمية"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemQteLabel"
                    app:layout_constraintEnd_toStartOf="@+id/resource" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/txtCartItemCategory"
                    android:layout_marginTop="12dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="46dp"/>
            <TextView
                    android:text="النوع"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemCategory"
                    app:layout_constraintEnd_toStartOf="@+id/resource" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txtCartItemQte"/>
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/resource" android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>