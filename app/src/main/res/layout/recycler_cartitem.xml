<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
>

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:background="@android:color/white">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtCartItemQte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cartItemImage"
                android:layout_alignParentEnd="true"
                android:text="1"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="63dp" />

            <TextView
                android:id="@+id/txtCartItemPackaging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="بلستيك"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="63dp" />

            <TextView
                android:id="@+id/txtCartItemSlicing"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="أرباع"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="التقطيع"
                android:textColor="#32a65b"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="109dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="41dp"
                android:layout_height="31dp"
                android:text="الوزن"
                android:textColor="#32a65b"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/txtCartItemWeight"
                android:layout_width="138dp"
                android:layout_height="44dp"
                android:lines="2"
                android:minLines="2"
                android:text="@string/WeightNaemeJadaeM"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="59dp" />

            <TextView
                android:id="@+id/txtCartItemIntestine"
                android:layout_width="23dp"
                android:layout_height="32dp"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="نعم"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="56dp"
                android:layout_height="31dp"
                android:text="المصارن"
                android:textColor="#32a65b"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="109dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:text="التعليب"
                android:textColor="#32a65b"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/txtCartItemQteLabel"
                android:layout_width="40dp"
                android:layout_height="31dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="الكمية"
                android:textColor="#32a65b"
                app:layout_constraintEnd_toStartOf="@+id/resource"
                app:layout_constraintTop_toBottomOf="@+id/txtCartItemCategory" />

            <TextView
                android:id="@+id/txtCartItemCategory"
                android:layout_width="77dp"
                android:layout_height="31dp"
                android:layout_marginTop="16dp"
                android:text="@string/recyclerItemGoat"
                android:textColor="#32a65b"
                app:layout_constraintEnd_toStartOf="@+id/resource"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/resource"
                android:layout_width="77dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>