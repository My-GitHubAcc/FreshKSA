<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
>

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:background="@android:color/white">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@android:drawable/btn_dialog"
                    android:id="@+id/rmvImg" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cartItemImage"
                    android:id="@+id/txtCartItemQte"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemQteLabel"
                    app:layout_constraintTop_toTopOf="@+id/txtCartItemQteLabel"/>
            <TextView
                    android:text="بلستيك"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtCartItemPackaging"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="@+id/textView"/>
            <TextView
                    android:text="أرباع"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemSlicing"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"/>
            <TextView
                    android:text="التقطيع"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="@+id/textView" android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtCartItemQteLabel"/>
            <TextView
                    android:text="الوزن"
                    android:layout_width="41dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="31dp"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:layout_constraintBottom_toTopOf="@+id/txtCartItemWeight"
                    android:id="@+id/textView13" app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="54dp"
                    android:layout_marginStart="54dp"/>
            <TextView
                    android:text="@string/WeightNaemeJadaeM"
                    android:layout_width="111dp"
                    android:layout_height="38dp"
                    android:id="@+id/txtCartItemWeight"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:lines="2"
                    android:minLines="2"
                    app:layout_constraintEnd_toStartOf="@+id/textView" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
            <TextView
                    android:text="نعم"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:id="@+id/txtCartItemIntestine"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/txtCartItemSlicing"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"/>
            <TextView
                    android:text="المصارن"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="56dp"
                    android:layout_height="31dp"
                    android:id="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="47dp"
                    android:layout_marginStart="47dp" app:layout_constraintEnd_toStartOf="@+id/textView5"
                    android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@+id/textView5"/>
            <TextView
                    android:text="التعليب"
                    android:gravity="right"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:id="@+id/textView"
                    app:layout_constraintTop_toTopOf="@+id/txtCartItemCategory"
                    app:layout_constraintStart_toEndOf="@+id/textView13"
                    android:layout_marginLeft="36dp" android:layout_marginStart="36dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtCartItemPackaging"
                    app:layout_constraintVertical_bias="1.0"/>
            <TextView
                    android:text="الكمية"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="40dp"
                    android:layout_height="31dp"
                    android:id="@+id/txtCartItemQteLabel"
                    app:layout_constraintEnd_toStartOf="@+id/resource" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/txtCartItemCategory"
                    android:layout_marginTop="16dp"
            />
            <TextView
                    android:text="@string/recyclerItemGoat"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="77dp"
                    android:layout_height="31dp"
                    android:id="@+id/txtCartItemCategory"
                    app:layout_constraintEnd_toStartOf="@+id/resource" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
            />
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/resource" android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>