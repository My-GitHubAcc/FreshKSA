<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="3dp"
>
    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:focusable="true">
        <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="النوع"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemCategory"
                    android:layout_alignStart="@+id/txtCartItemQteLabel"
                    android:layout_alignTop="@+id/cartItemImage"/>
            <TextView
                    android:text="الكمية"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemQteLabel"
                    android:layout_alignBottom="@+id/cartItemImage"
                    android:layout_toStartOf="@+id/cartItemImage"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true">

                <TextView
                        android:text="التعليب"
                        android:gravity="right"
                        android:textColor="#32a65b"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/cartItemImage"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cartItemImage"
                    android:id="@+id/txtCartItemQte"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="124dp"/>
            <TextView
                    android:text="بلستيك"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtCartItemPackaging"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="39dp"/>
            <TextView
                    android:text="أرباع"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemSlicing"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="113dp"/>
            <TextView
                    android:text="التقطيع"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView13"
                    android:layout_below="@+id/txtCartItemQteLabel"/>
            <TextView
                    android:text="الوزن"
                    android:layout_width="wrap_content"
                    android:textColor="#32a65b"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="53dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/textView18"/>
            <TextView
                    android:text="10KG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemWeight"
                    android:layout_alignStart="@+id/textView18"
                    android:layout_alignTop="@+id/txtCartItemPackaging"/>
            <TextView
                    android:text="نعم"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCartItemIntestine"
                    android:layout_alignEnd="@+id/textView18"
                    android:layout_weight="1"
                    android:layout_alignTop="@+id/txtCartItemSlicing"/>
            <TextView
                    android:text="المصارن"
                    android:textColor="#32a65b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="41dp"
                    android:id="@+id/textView20"
                    android:layout_below="@+id/txtCartItemQteLabel"
                    android:layout_weight="1"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>