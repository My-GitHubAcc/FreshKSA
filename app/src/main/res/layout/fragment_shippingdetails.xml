<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="الإسم الكامل"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="160dp"
            android:id="@+id/textView12"
            android:gravity="right" android:textColor="#32a65b" android:layout_alignEnd="@+id/textView17"/>
    <TextView
            android:text="رقم الهاتف"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="217dp"
            android:id="@+id/textView17" android:gravity="right"
            android:textColor="#32a65b" android:layout_alignParentEnd="true" android:layout_marginEnd="28dp"/>
    <TextView
            android:text="العنوان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" android:gravity="right"
            android:textColor="#32a65b" android:layout_alignEnd="@+id/textView12"
            android:layout_alignParentBottom="true" android:layout_marginBottom="248dp"/>
    <TextView
            android:text="وقت التوصيل"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" android:gravity="right"
            android:textColor="#32a65b"
            android:layout_alignParentBottom="true" android:layout_marginBottom="191dp"
            android:layout_alignStart="@+id/textView12"/>
    <TextView
            android:text="أحمد الحمودي"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView12" android:id="@+id/txtUserName"
            android:layout_alignStart="@+id/txtDeliveryCost"/>
    <TextView
            android:text="000000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/textView17"
            android:layout_alignStart="@+id/txtOrderTotal"
            android:id="@+id/txtDeliveryCost"/>
    <TextView
            android:text="خيمة الساحل "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOrderTotal"
            android:layout_alignTop="@+id/textView19" android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"/>
    <TextView
            android:text="بيانات التواصل"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="34dp"
            android:layout_centerHorizontal="true" android:id="@+id/textView30" android:textColor="#32a65b"
            android:textSize="24sp"/>
    <Button
            android:text="متابعة"
            android:layout_width="171dp"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="57dp" android:id="@+id/btnConfirmShipping"
            android:background="#32a65b" android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:layout_alignTop="@+id/textView21"
            android:id="@+id/rdGrpTime">
        <RadioButton
                android:id="@+id/rdTimeNoon"
                android:text="1-10 ظهرا"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
        <RadioButton
                android:text="3-5 مساء "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdTimeAfterNoon"/>
        <RadioButton
                android:text="7-9مساء"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdTimeEvening"/>
    </RadioGroup>

</RelativeLayout>