<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        tools:context=".OrderItemFragment">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">
            <LinearLayout
                    android:id="@+id/layoutQuantity"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="الكمية"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#32a65b"
                        android:layout_marginTop="10dp"/>

                <EditText
                        android:id="@+id/edtQuantity"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:hint="0"
                        android:inputType="number"
                        android:layout_marginTop="5dp" android:text="0"/>
            </LinearLayout>

            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">
                <LinearLayout
                        android:id="@+id/layoutSlicing"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        android:layout_width="162dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="التقطيع"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#32a65b"
                            android:id="@+id/txtSlicing"
                            android:gravity="center"/>
                    <Spinner
                            android:layout_width="176dp"
                            android:layout_height="26dp"
                            android:layout_gravity="right"
                            android:background="#fefefe"
                            android:id="@+id/spSlicing"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            android:layout_marginTop="5dp" android:spinnerMode="dialog"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/layoutSize"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="الوزن"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#32a65b"
                            android:gravity="center"/>
                    <Spinner
                            android:layout_width="176dp"
                            android:layout_height="26dp"
                            android:textSize="18sp"
                            android:id="@+id/spWeight"
                            android:gravity="center"
                            android:spinnerMode="dialog"
                            android:background="#ffffff"
                            android:layoutDirection="rtl"
                            android:layout_marginTop="5dp" android:accessibilityHeading="false"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/layoutPackaging"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="8dp">
                <TextView
                        android:text="التعليب"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#32a65b"
                        android:gravity="center"
                        android:id="@+id/txtPackaging"/>
                <Spinner
                        android:id="@+id/spPackaging"
                        android:layout_width="176dp"
                        android:layout_height="26dp"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:background="#fefefe"
                        android:layout_weight="1"
                        android:spinnerMode="dialog"
                        android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                <TextView
                        android:text="المصارن"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#32a65b"
                        android:gravity="center"
                        android:id="@+id/txtInt"/>

                <RadioGroup
                        android:id="@+id/rdGrpIntestine"
                        android:layout_width="108dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">
                    <RadioButton
                            android:id="@+id/rdInt_Yes"
                            android:text="نعم"
                            android:textColor="#32a65b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColorLink="#32a65b" android:checked="true" tools:checked="true"/>
                    <RadioButton
                            android:id="@+id/rdInt_No"
                            android:text="لا"
                            android:textColor="#32a65b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/edtNotes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="end"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"/>
                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">

                    <TextView
                            android:text="0.0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#32a65b"
                            android:id="@+id/txtTotalItem"
                            android:gravity="center"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="128dp"/>

                    <TextView
                            android:text="@string/Total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#32a65b"
                            android:gravity="center" android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" android:layout_marginEnd="114dp"/>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>